  <% if current_user.favorite?(micropost) %>
    <%= form_for(current_user.favorites.find_by(micropost_id: micropost.id), html: {method: :delete}) do |favorite| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= favorite.submit 'UnLike', class: 'btn btn-info btn-xs'%>
    <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build) do |favorite| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= favorite.submit 'Like', class: 'btn btn-primary btn-xs' %>
    <% end %>
  <% end %>
